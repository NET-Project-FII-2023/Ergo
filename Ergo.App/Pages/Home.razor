@page "/"
@using Ergo.App.Contracts
@using Microsoft.AspNetCore.Components.Authorization
@inherits LayoutComponentBase

<PageTitle>Home</PageTitle>

<style>

    body{
        overflow:hidden;
        margin:0;
    }



    .card-container {
        display: flex;
        flex-direction: column;
        align-items: stretch;
        width: 300px; 
    }

    .card {
        background-color: #a249d1;
        opacity: 0.25;
        display: flex;
        flex-direction: column;
        height: fit-content; 
        margin: 0 20px;
    }


   
</style>

<div class="stars-container">
    @for (int i = 0; i < 250; i++)
    {
        var size = Random.Next(1, 3); 
        var darkness = Random.Next(30, 40); 
        <div class="star" style="width: @(size)px; height: @(size)px; top: @(Random.Next(10, 100))vh; left: @(Random.Next(15, 100))vw; animation-duration: @(Random.Next(5, 33))s; opacity: 0.@darkness;"></div>
    }
</div>

<div class="d-flex align-items-center flex-column justify-content-center" style="margin-bottom:5rem;margin-top:6rem;">
    <h1 style="font-weight:700; font-size:64px; text-align:center;">Ergo</h1>
    <h5 class="green-gradient-text">Created to empower your work, inspiring you to create.</h5>
</div>


<div class="home-cards">
    <div class="card card-body-home" style=" background: linear-gradient(to right, #56296e, #a249d1); opacity:0.35;">
        <div class="card-body">
